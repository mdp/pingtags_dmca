#home
  %div{:class => 'grid_4 prefix_2'}
    %h2.heading LinkedIn Profile
    #avatar
      %img{:src=> current_user.picture_url }
    %p
      = current_user.name
      %br
      = current_user.headline
    %p.summary= current_user.summary
    %h6 
      Contact Details
      %span.small
        %a{:href => update_contact_account_path}
          (edit)
    %p
      = current_user.email

  %div{:class => 'grid_4 omega'}
    %h2.heading PingTag QR Code
    %img{:src => current_user.barcode(175)}
  %div.clear
  %div.grid_8.prefix_2
    %h2.heading Scans
    -if current_user.scans.count > 0
      %table
        %tbody
          %tr
            %th
            %th Device
            %th Clicks
            %th Time
          -current_user.scans.each do |scan|
            %tr
              %td.icon=image_tag 'scan.png'
              %td=scan.device.make
              %td=scan.clicks.count
              %td
                %a{:href => scan_path(scan)}
                  ="#{time_ago_in_words(scan.created_at)} ago"
    -else
      %p No scans yet