%h1
  Edit
- form_for(@user) do |f|
  = f.error_messages
  %p
    = f.label :email
    %br
    = f.text_field :email
  %p
    = f.label :password
    %br
    = f.password_field :password
  %p
    = f.label :password_confirmation
    %br
    = f.text_field :password_confirmation

  = f.submit 'Update'

= link_to 'Back', account_path
